<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/teal_700"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First row: Serial number, Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSerial"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/serial_circle_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-08-07"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Medicine Name -->
        <TextView
            android:id="@+id/tvMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:text="Medicine Name"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Table-like layout for summary -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:elevation="2dp"
            android:padding="6dp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:gravity="center"
                    android:text="Opening"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:text="Cons."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:text="Emerg."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:text="Closing"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:text="Issued"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:text="Stock"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvOpening"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvConsumption"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvEmergency"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvClosing"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvStoreIssued"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvStockAvailable"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/holo_blue_light"
            android:text="Delete"
            android:textColor="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>