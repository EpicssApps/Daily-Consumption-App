<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Date Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Select Date"
            android:inputType="none"
            android:drawableRight="@android:drawable/ic_menu_my_calendar" />

        <!-- Vehicle Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Name"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinner_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

        <!-- Medicine Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Select Medicine"
            android:inputType="none"
            android:drawableRight="@android:drawable/ic_menu_search" />

        <!-- Opening Balance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Balance"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_opening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Opening Balance" />

        <!-- Consumption -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumption"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_consumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Consumption" />

        <!-- Total Emergency -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Emergency"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_total_emergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Total Emergency" />

        <!-- Closing Balance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Balance"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_closing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Closing Balance" />

        <!-- Error Text -->
        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B71C1C"
            android:paddingTop="8dp"
            android:text=""
            android:textStyle="bold"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="18dp"/>

        <!-- Summary Button -->
        <Button
            android:id="@+id/btn_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>